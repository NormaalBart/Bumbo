@model IEnumerable<Bumbo.Models.BranchController.BranchViewModel>

@{
    ViewData["Title"] = "Filialen";
}

<h1>Filialen</h1>

<p>
    <a asp-action="Create">Maak nieuwe aan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelvingDistance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormattedStreet)
            </th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelvingDistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedStreet)
            </td>
            <td>
                @Html.ActionLink("Verander", "Edit", new {  id=item.Id }) |
                <div class="btn btn-warning">
                @Html.ActionLink("Zet inactief", "SetInactive", new {  id=item.Id })
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
