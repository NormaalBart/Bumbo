@model Bumbo.Models.BranchController.BranchListViewModel

@{
    ViewData["Title"] = "Filialen";
}

<h1>Filialen</h1>

<div >
    <form asp-action="Index">
        <input asp-for="Page" hidden value="@{Write( Model.Page + 1);}"/>
        <input type="submit" value="Ga naar pagina @{Write( Model.Page + 1);}" class="btn btn-primary float-end" />
    </form>
    <button asp-action="Create" class="btn btn-success float-start">Maak nieuwe aan</button>
    @if (Model.Page >= 2)
    {
    <form asp-action="Index">
        <input asp-for="Page"  hidden value="@{Write( Model.Page - 1);}" />
        <input type="submit" value="Ga naar pagina @{Write( Model.Page - 1);}" class="btn btn-primary float-start" />
    </form>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branches[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branches[0].ShelvingDistance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branches[0].FormattedStreet)
            </th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Branches) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelvingDistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedStreet)
            </td>
            <td>
                @Html.ActionLink("Verander", "Edit", new {  id=item.Id }) |
                <div class="btn btn-warning">
                @Html.ActionLink("Zet inactief", "SetInactive", new {  id=item.Id })
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
