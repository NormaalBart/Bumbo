@model Bumbo.Models.ApproveWorkedHours.EmployeeWorkedHoursViewModel

<h1 class=" col-sm d-flex justify-content-center flex-nowrap"><b>Name:</b>  @Model.FullName</h1>

@using (Html.BeginForm("Edit", "WorkedHours", FormMethod.Post))
{
    for (var i = 0; i < Model.WorkedShifts.Count(); i++)
    {
        @Html.HiddenFor(m => m.WorkedShifts[i].Id)
        @Html.Raw("Start tijd: ") @Html.EditorFor(workedShift => workedShift.WorkedShifts[i].StartTime)
        @Html.Raw("Eind tijd: ") @Html.EditorFor(workedShift => workedShift.WorkedShifts[i].EndTime)
    }
    <input type="submit" value="Opslaan" />
}
