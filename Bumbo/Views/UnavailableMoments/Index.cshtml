@model Bumbo.Models.UnavailableMoments.UnavailableMomentsListViewModel

@{
    ViewData["Title"] = "Afwezigheid";
}

<div>
    <h1 class="col-5">Afwezigheid</h1>

    <div class="row">
          <div class="col">
        <!-- Trigger/Open The Modal -->
        <button class="btn btn-primary" id="openModalBTN">Schoolrooster kopieren tussen dagen</button>
    </div>
    <p class="col">
        <a asp-action="Create" class="btn btn-success btn-lg">+ Nieuw moment</a>
    </p>
    </div>
  
</div>

@if (Model.UnavailableMoments.Count > 0)
{
    <table class="table table-hover border-collapse">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UnavailableMoments[0].StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnavailableMoments[0].EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnavailableMoments[0].Type)
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var moment in Model.UnavailableMoments)
            {
                <tr class="">
                    <td colspan="5">
                      
                    </td>
                </tr>
                // if the moment is on the same day, we don't show the date multiple times
                @if (moment.StartTime.Date == moment.EndTime.Date)
                {
                    <tr class="moments-row">
                        <td colspan="5">
                            @moment.StartTime.ToString("ddd d-M-yyyy ")
                        </td>
                    </tr>
                }else{
                    <tr class="moments-row">
                        <td colspan="5">
                            @moment.StartTime.ToString("ddd d-M-yyyy") tot  @moment.EndTime.ToString("ddd d-M-yyyy")
                        </td>
                    </tr>
                }
                <tr class="moments-row" onclick="onRowClick('@moment.StartTime.Date.ToString("yyyy-M-dd")', '@moment.StartTime.AddDays(7).Date.ToString("yyyy-M-dd")')">
                    <td>        
                        @moment.StartTime.ToString("HH:mm")
                    </td>
                    <td>
                        @moment.EndTime.ToString("HH:mm")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => moment.Type)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@moment.Id" class="btn btn-sm btn-danger">Verwijder</a>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-info">Je hebt nog geen onbeschikbare momenten. Voeg er een toe door op de voeg toe knop te drukken bovenaan het scherm.</p>
}


<script>
    function onRowClick(starttime, endtime) {
        var modal = document.getElementById("modal");
        modal.style.display = "block";
        document.getElementById('modal-input-from').value = starttime;
        document.getElementById('modal-input-to').value = endtime;

    }
</script>


<div id="modal" class="modal-mobile">
    <!-- Modal content -->
    <div class="modal-content-mobile">
        <span class="close position-absolute">&times;</span>
        <label> </label>
        <div class="m-3 align-content-center text-center m-3">
            <form asp-action="CopyFromDay">
                <h2 class="text-center">Kopieer schoolrooster van dag</h2>
                <div class="row">
                    <span class="col-4 text-end">Dag</span>
                    <input id="modal-input-from" asp-for="CopyFrom" class="col-5 asp-format="{0:yyyy-MM-dd}" />
                    <span asp-validation-for="CopyFrom" class="text-danger col-2"></span>
                </div>
                
                <div class="row">
                    <span class="col-2"></span>
                    <span class="col-6">Kopieren naar</span>
                </div>
                

                <div class="row">
                    <span class="col-4 text-end">Dag</span>
                    <input id="modal-input-to" asp-for="CopyTo" class="col-5" asp-format="{0:yyyy-MM-dd}" />
                    <span asp-validation-for="CopyTo" class="text-danger col-"4"></span>
                </div>
                <input type="submit" value="Kopiëren" class="btn btn-success btn-sm m-3" />
            </form>
        </div>
    </div>
</div>
